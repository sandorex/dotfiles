{
   /* telemetry */
   "telemetry.enableCrashReporter": false,
   "telemetry.enableTelemetry": false,

   /* looks */
   "window.zoomLevel": 1,
   "editor.fontSize": 26,
   // "editor.fontFamily": "'Hack', Consolas, 'Courier New', monospace", // windows
   // "terminal.integrated.fontFamily": "'Hack', Consolas, 'Courier New', monospace", // windows
   "editor.fontFamily": "'Hack Bold', 'Droid Sans Mono', monospace", // linux
   "terminal.integrated.fontFamily": "'Hack Bold', 'Droid Sans Mono', monospace", // linux
   "workbench.colorTheme": "Solarized Dark",

   /* base configuration */
   "window.titleBarStyle": "custom",
   "editor.formatOnSave": false,
   "editor.minimap.enabled": false,
   "workbench.sideBar.location": "left",
   "workbench.statusBar.feedback.visible": false,
   "workbench.activityBar.visible": true,
   "workbench.statusBar.visible": true,
   "workbench.editor.highlightModifiedTabs": true,
   "git.autoRepositoryDetection": false,
   "files.trimTrailingWhitespace": true,
   "files.autoSave": "onFocusChange",
   "files.insertFinalNewline": true,
   "explorer.confirmDelete": false,
   "diffEditor.renderSideBySide": false,
   "breadcrumbs.enabled": false,

   /* indentation */
   "editor.detectIndentation": false,
   "editor.insertSpaces": true,
   "editor.tabSize": 3,

   /* language specific */
   "[markdown]": {
      "files.trimTrailingWhitespace": false
   },

   /* extension settings */
   "liveServer.settings.donotShowInfoMsg": true,
   "cmake.configureOnOpen": false,
   "path-intellisense.showHiddenFiles": true,
   "git.autofetch": true
 }

