## MISC
# disable blanking/screensaver
begin
	prog=irexec
	remote=mceusb
	button=KEY_NUMERIC_STAR
	config=/usr/bin/xset s off -dpms
end

# suspend screen
begin
	prog=irexec
	remote=mceusb
	button=KEY_0
	config=/home/sandorex/.dotconfig/bin/suspend-monitor
end

# restore blanking/screensaver
begin
	prog=irexec
	remote=mceusb
	button=KEY_NUMERIC_POUND
	config=/usr/bin/xset s on +dpms
end
