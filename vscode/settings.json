// VSCode Configuration
//
// Switch configurations by using multiline comments like
// '/*' (disabled) and '//*' (enabled) remember to put '/**/'
// at the end so the comment doesn't disable other stuff
//
{
   // TELEMETRY
   "telemetry.enableCrashReporter": false,
   "telemetry.enableTelemetry": false,
   "workbench.enableExperiments": false,
   "workbench.settings.enableNaturalLanguageSearch": false,

   // THEMING & LOOKS
   "editor.fontSize": 22,
   "editor.rulers": [ 70, 90 ],
   "editor.minimap.enabled": false,
   "workbench.sideBar.location": "left",
   "workbench.activityBar.visible": true,
   "workbench.statusBar.visible": true,
   "workbench.editor.highlightModifiedTabs": true,
   "window.zoomLevel": 1,
   "window.titleBarStyle": "custom",
   "workbench.colorTheme": "Dracula",
   "breadcrumbs.enabled": false,

   //* WINDOWS
   "editor.fontFamily": "'Hack', Consolas, 'Courier New', monospace",
   "terminal.integrated.fontFamily": "'Hack', Consolas, 'Courier New', monospace",
   "python.pythonPath": "C:\\Program Files\\Python38\\python.exe", /**/

   /* LINUX
   "editor.fontFamily": "'Hack Bold', 'Droid Sans Mono', monospace",
   "terminal.integrated.fontFamily": "'Hack Bold', 'Droid Sans Mono', monospace", /**/

   // BEHAVIOUR
   "editor.formatOnSave": false,
   "files.trimTrailingWhitespace": true,
   "files.autoSave": "onFocusChange",
   "files.insertFinalNewline": true,
   "files.encoding": "utf8",
   "explorer.confirmDelete": true,
   "diffEditor.renderSideBySide": true,
   "editor.acceptSuggestionOnEnter": "off",

   // INDENTATION
   "editor.detectIndentation": false,
   "editor.insertSpaces": true,
   "editor.tabSize": 3,

   // EXTENSIONS
   "files.associations": {
      "*.json": "jsonc"
   },

   // PER-LANGUAGE SETTINGS
   "[markdown]": {
      "files.trimTrailingWhitespace": false
   },
   "[shellscript]": {
      "files.encoding": "utf8",
      "files.eol": "\n"
   },

   // EXTENSION SETTINGS
   "git.autofetch": true,
   "git.untrackedChanges": "separate",
   "python.linting.pylintEnabled": true,
   "python.linting.enabled": true,
   "liveServer.settings.donotShowInfoMsg": true,
   "cmake.configureOnOpen": false,
   "path-intellisense.showHiddenFiles": true,
}
