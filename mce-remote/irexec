## MEDIA
begin
	prog=irexec
	remote=mceusb
	button=KEY_PLAY
	config=/usr/bin/xte 'key XF86AudioPlay'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_PAUSE
	config=/usr/bin/xte 'key XF86AudioPause'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_VOLUMEUP
	config=/usr/bin/xte 'key XF86AudioRaiseVolume'
end


begin
	prog=irexec
	remote=mceusb
	button=KEY_VOLUMEDOWN
	config=/usr/bin/xte 'key XF86AudioLowerVolume'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_MUTE
	config=/usr/bin/xte 'key XF86AudioMute'
end


begin
	prog=irexec
	remote=mceusb
	button=KEY_STOP
	config=/usr/bin/xte 'key XF86AudioStop'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_AGAIN
	config=/usr/bin/xte 'key XF86AudioPrev'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_NEXT
	config=/usr/bin/xte 'key XF86AudioNext'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_REWIND
	config=/usr/bin/xte 'key XF86AudioRewind'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_FORWARD
	config=/usr/bin/xte 'key XF86AudioForward'
end

begin
	prog=irexec
	remote=mceusb
	button=KEY_AUDIO # music key on remote
	config=/usr/bin/xte 'key XF86AudioMedia'
end

